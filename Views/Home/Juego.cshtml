<p>Enunciado: @ViewBag.Preguntas.Enunciado</p>

<form action="VerificarRespuesta" method="POST">
    <input type="hidden" name="idPregunta" value="@ViewBag.IdPregunta" />

    <h3>Respuestas:</h3>
    <ul>
        @foreach (var respuesta in ViewBag.Respuestas)
        {
            <li>
                <label>
                 <input type="radio" name="idRespuesta" value="@respuesta.IdRespuesta" required />

                 @respuesta.Contenido
                 
    
                    
                </label>
            </li>
        }
    </ul>

    <input type="submit" value="Responder" />
</form>